{
  "name": "code",
  "tags": ["library"],
  "targets": {
    "lint": {
      "dependsOn": [{ "projects": ["*"], "target": "compile" }],
      "executor": "nx:run-commands",
      "options": { "cwd": "{projectRoot}", "command": "pnpm lint" },
      "cache": true,
      "inputs": ["default"],
      "configurations": { "production": {} }
    },
    "test": {
      "dependsOn": [{ "projects": ["*"], "target": "compile" }],
      "executor": "nx:run-commands",
      "options": { "cwd": "{projectRoot}", "command": "pnpm test" },
      "cache": true,
      "inputs": ["default"],
      "configurations": { "production": {} }
    },
    "knip": {
      "dependsOn": [{ "projects": ["*"], "target": "compile" }],
      "executor": "nx:run-commands",
      "options": { "cwd": "{projectRoot}", "command": "pnpm knip --no-exit-code" },
      "cache": true,
      "inputs": ["default"],
      "configurations": { "production": {} }
    }
  }
}
