{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "nxCloudAccessToken": "NGVmYTkxMmItYzY3OS00MjkxLTk1ZDktZDFmYTFmNmVlNGY4fHJlYWQ=",
  "defaultBase": "next",
  "parallel": 8,
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": false
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "canTrackAnalytics": false,
        "showUsageWarnings": true
      }
    }
  },
  "tui": {
    "autoExit": true
  },
  "targetDefaults": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "yarn prep",
        "args": "--reset"
      },
      "configurations": {
        "production": {
          "args": "--reset --optimized"
        }
      },
      "inputs": ["production", "^production"],
      "dependsOn": ["^build"],
      "outputs": [
        "{projectRoot}/dist",
        "{workspaceRoot}/code/bench/esbuild-metafiles/{projectName}"
      ],
      "cache": true
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "yarn exec jiti $(yarn workspace @storybook/scripts bin check-package)"
      },
      "configurations": {
        "production": {}
      },
      "inputs": ["default", "^production"],
      "dependsOn": [
        {
          "projects": ["*"],
          "target": "build"
        }
      ],
      "cache": true
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn workspace @storybook/scripts local-registry --publish"
      },
      "configurations": {
        "production": { "command": "yarn workspace @storybook/scripts local-registry --publish" }
      },
      "dependsOn": [
        {
          "projects": ["*"],
          "target": "build"
        }
      ],
      "inputs": [
        "{workspaceRoot}/code/**/*",
        "!{workspaceRoot}/code/**/**/*.{test,spec,stories}.?(c|m)[jt]s?(x)?(.snap)"
      ],
      "outputs": ["{workspaceRoot}/.verdaccio-cache"],
      "cache": true
    },
    "run-registry": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn workspace @storybook/scripts local-registry --open"
      },
      "dependsOn": ["publish"],
      "continuous": true
    },
    "sandbox": {
      "executor": "nx:run-commands",
      "inputs": ["^production"],
      "outputs": ["{workspaceRoot}/sandbox/{options.outputPath}"],
      "options": {
        "cwd": "{workspaceRoot}",
        "command": "yarn task sandbox -s never --debug --no-link --template={projectName}",
        "forwardAllArgs": false
      },
      "configurations": { "production": {} },
      "dependsOn": [
        {
          "projects": ["scripts"],
          "target": "run-registry"
        }
      ],
      "cache": true
    },
    "check-sandbox": {
      "executor": "nx:run-commands",
      "inputs": ["^production"],
      "options": {
        "cwd": "{workspaceRoot}",
        "command": "yarn task check-sandbox -s never --debug --no-link --template={projectName}",
        "forwardAllArgs": false
      },
      "configurations": { "production": {} },
      "dependsOn": ["sandbox"],
      "cache": true
    },
    "build-sandbox": {
      "executor": "nx:run-commands",
      "inputs": ["^production"],
      "outputs": ["{workspaceRoot}/sandbox/{options.outputPath}/storybook-static"],
      "options": {
        "cwd": "{workspaceRoot}",
        "command": "yarn task build -s never --debug --no-link --template={projectName}",
        "forwardAllArgs": false
      },
      "configurations": { "production": {} },
      "dependsOn": ["sandbox"],
      "cache": true
    },
    "chromatic": {
      "executor": "nx:run-commands",
      "inputs": ["^production"],
      "outputs": ["{workspaceRoot}/sandbox/{options.outputPath}/storybook-static"],
      "options": {
        "cwd": "{workspaceRoot}",
        "command": "yarn task chromatic -s never --debug --no-link --template={projectName}",
        "forwardAllArgs": false
      },
      "configurations": { "production": {} },
      "dependsOn": ["build-sandbox"],
      "cache": true
    },
    "serve": {
      "executor": "nx:run-commands",
      "inputs": ["^production"],
      "options": {
        "cwd": "{workspaceRoot}",
        "command": "yarn task serve -s never --debug --no-link --template={projectName}",
        "forwardAllArgs": false
      },
      "configurations": { "production": {} },
      "continuous": true,
      "dependsOn": ["build-sandbox"]
    },
    "e2e-tests": {
      "executor": "nx:run-commands",
      "inputs": ["^production"],
      "options": {
        "cwd": "{workspaceRoot}",
        "command": "yarn task e2e-tests -s never --debug --no-link --template={projectName}",
        "forwardAllArgs": false
      },
      "configurations": { "production": {} },
      "dependsOn": ["serve"],
      "cache": true
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [
      "{workspaceRoot}/code/tsconfig.json",
      "{workspaceRoot}/scripts/**/*",
      "{workspaceRoot}/.github/workflows/nx.yml"
    ],
    "production": [
      "default",
      "!{projectRoot}/src/**/**/*.{test,spec,stories}.?(c|m)[jt]s?(x)?(.snap)",
      "!{projectRoot}/vitest.config.[jt]s",
      "!{projectRoot}/README.md",
      "!{projectRoot}/.eslintrc.{json,js}",
      "!{projectRoot}/src/test-setup.[jt]s"
    ]
  },
  "nxCloudId": "691dbcdcb2822ca4fdc727c4"
}
